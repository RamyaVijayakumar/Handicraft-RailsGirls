<p id="notice"><%= notice %></p>

<h1>Stuff made by some aweseome RailsGirls<%= link_to 'New Handicraft', new_handicraft_path, class: 'btn btn-danger btn-large pull-right' %></h1> 

<br><br>

  <% @handicrafts.in_groups_of(4).each do |handicraft_group| %>
    <div class="row">
      <% handicraft_group.compact.each do |handicraft| %>
        <div class="col-sm-3">
          <div class="col-item">
            <div class="photo">
              <img src=<%= handicraft.image %> class="img-responsive" alt="a" />
            </div>
            <div class="info">
              <div class="row">
                <div class="price col-md-6">
                  <h5><%= handicraft.name[0..10] %></h5>
                  <h5 class="price-text-color">$<%= handicraft.price %></h5>
                  <h5>Owner: <%= handicraft.owner_name %></h5>
                </div>
                <div class="rating hidden-sm col-md-6">
                  <i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                  </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                  </i><i class="fa fa-star"></i>
                </div>
              </div>
              <div class="separator clear-left">
                <p class="btn-add">
                <i class="fa fa-shopping-cart"></i><a href="http://www.jquery2dotnet.com" class="hidden-sm">Add to cart</a>
                </p>
                <p class="btn-details">
                  <i class="fa fa-list"></i>
                  <%= link_to 'More details', handicraft, class: 'hidden-sm' %>
                </p>
              </div>
              <div class="clearfix">
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<%= will_paginate @handicrafts %>
